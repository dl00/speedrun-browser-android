<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>

        <item name="android:itemBackground">@color/colorPrimary</item>

        <item name="buttonStyle">@style/AppTheme.Button</item>

        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>

        <item name="android:windowBackground">@color/colorPrimary</item>

        <!-- Transitions -->
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>

        <!-- specify shared element transitions -->
        <!--<item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform
        </item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform
        </item>-->

        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="android:editTextStyle">@style/AppTheme.EditText</item>
        <item name="android:checkboxStyle">@style/AppTheme.Checkbox</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Transitions -->
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform
        </item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform
        </item>
    </style>

    <style name="AppTheme.TextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/saira_condensed</item>
        <item name="android:fontFamily">@font/saira_condensed</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/saira_condensed</item>
        <item name="android:fontFamily">@font/saira_condensed</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/saira_condensed</item>
        <item name="android:fontFamily">@font/saira_condensed</item>
    </style>

    <style name="AppTheme.Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="fontFamily">@font/saira_condensed</item>
        <item name="android:fontFamily">@font/saira_condensed</item>
    </style>

    <style name="AppTheme.TextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/saira_condensed</item>
        <item name="android:fontFamily">@font/saira_condensed</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/all_white</item>
    </style>

    <style name="AppTheme.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/AppTheme.TextAppearance</item>
    </style>
</resources>