<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <EditText
        android:id="@+id/editGameFilter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:ems="10"
        android:hint="@string/enter_game_name"
        android:textColor="@android:color/white"
        android:inputType="textPersonName" />

    <danb.speedrunbrowser.views.ProgressSpinnerView
        android:id="@+id/spinner"
        android:name="danb.speedrunbrowser.GameListFragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:direction="right"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:context=".GameListActivity"
        tools:listitem="@layout/content_game_cover" />

    <danb.speedrunbrowser.views.SimpleTabStrip
        android:id="@+id/tabsType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>