<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginBottom="@dimen/half_fab_margin"
    android:layout_marginTop="@dimen/half_fab_margin">
    <TextView
        android:id="@+id/txtRunCategory"
        android:maxWidth="175dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/imgPlace"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/txtPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout android:orientation="vertical" android:gravity="end">
        <TextView android:id="@+id/txtRunTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView android:id="@+id/txtRunDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</TableRow>