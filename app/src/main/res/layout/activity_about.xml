<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/fab_margin"
    tools:context=".AboutActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/linkSpeedrunComTrophy"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/speedrun_com_trophy" />

            <ImageView
                android:id="@+id/linkSpeedrunComWebsite"
                android:layout_marginTop="-20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/speedrun_com_logo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:text="@string/label_about_subtitle"
                android:textAlignment="center"
                android:typeface="monospace"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/label_about_author"
                android:textAlignment="center"
                android:typeface="monospace"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_about_author2"
                android:textAlignment="center"
                android:typeface="monospace"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/linkOpenSourceLicenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/label_about_os_licenses"
                android:textAlignment="center"
                android:typeface="monospace"
                android:textStyle="bold"
                android:textColor="@color/colorLinkText"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>