<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    android:background="@color/colorPrimary"
    tools:context=".GameListActivity">

    <!--
    This layout is a two-pane layout for the Games
    master/detail flow.
    
    -->

    <LinearLayout
        android:layout_width="@dimen/item_width"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editGameFilter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="@dimen/half_fab_margin"
            android:paddingEnd="@dimen/half_fab_margin"
            android:ems="10"
            android:hint="@string/enter_game_name"
            android:textColor="@android:color/white"
            android:inputType="textPersonName" />

        <ListView
            android:id="@+id/listAutoCompleteResults"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <danb.speedrunbrowser.views.SimpleTabStrip
            android:id="@+id/tabsType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.viewpager.widget.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>