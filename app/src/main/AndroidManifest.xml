<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="danb.speedrunbrowser">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="n">
        
        <!-- have to disable this or else google will complain I collect sensitive privacy info -->
        <meta-data android:name="google_analytics_adid_collection_enabled" android:value="false" />
        
        <activity android:name=".HistoryActivity"
            android:label="@string/title_activity_history"
            android:parentActivityName=".GameListActivity" />

        <service
            android:name=".MessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".PlayerDetailActivity" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".GameListActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="danb.speedrunbrowser.GameListActivity" />
        </activity>
        <activity
            android:name=".GameListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameDetailActivity"
            android:label="@string/title_game_detail"
            android:parentActivityName=".GameListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <tools:validation testUrl="https://www.speedrun.com/botw" />

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="danb.speedrunbrowser.GameListActivity" />

            <intent-filter android:order="1">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.speedrun.com"
                    android:pathPattern="/.*"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RunDetailActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_run_detail"
            android:parentActivityName=".GameDetailActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="danb.speedrunbrowser.GameDetailActivity" />

            <intent-filter android:order="2">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.speedrun.com"
                    android:pathPattern="/.*/run/.*"
                    android:scheme="https" />
            </intent-filter>
        </activity>
    </application>

</manifest>