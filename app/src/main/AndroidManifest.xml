<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="danb.speedrunbrowser">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="n">

        <service
            android:name=".MessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".GameListActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="danb.speedrunbrowser.GameListActivity" />
        </activity>
        <activity
            android:name=".GameListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".GameListActivity"
            android:theme="@style/AppTheme">
            <tools:validation testUrl="https://www.speedrun.com/botw" />

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="danb.speedrunbrowser.GameListActivity" />

            <intent-filter android:order="1">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.speedrun.com"
                    android:pathPattern="/.*"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RunDetailActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_run_detail"
            android:parentActivityName=".ItemDetailActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="danb.speedrunbrowser.ItemDetailActivity" />
        </activity>

        <activity android:name=".stats.SiteStatisticsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_site_statistics"
            android:theme="@style/AppTheme">

        </activity>

        <activity android:name=".stats.GameStatisticsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_game_stats"
            android:theme="@style/AppTheme">

        </activity>

        <activity android:name=".stats.LeaderboardStatisticsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_leaderboard_stats"
            android:theme="@style/AppTheme">

        </activity>
    </application>

</manifest>